<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    '/assets/application', media: 'all',
                             'data-turbolinks-track' => 'reload' %>
  <%= javascript_include_tag '/assets/application', 'data-turbolinks-track' => 'reload' %>
  <%= csrf_meta_tags %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
  <%= form_tag store_index_path, class: 'locale' do %>
      <%= select_tag 'set_locale',
                     options_for_select(LANGUAGES, I18n.locale.to_s),
                     onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit' %>
      <%= javascript_tag "$('.locale input').hide()" %>
  <% end %>
  <%= image_tag 'logo.jpg', :size => '200x90', alt: 'Libreria' %>
<h1 style="color: white">LIBRER√çA LUCY</h1>
  <span class="title"><%= @page_title %></span>
</div>
<div id="columns">
  <div id="side">
    <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
        <% end %>
    <% end %>



    <ul class="sidebar-nav nav">
      <li><a href="http://www...."><%= t('.home') %></a></li>
      <li><a href="http://www..../faq"><%= t('.questions') %></a></li>
      <li><a href="http://www..../news"><%= t('.news') %></a></li>
      <li><a href="http://www..../contact"><%= t('.contact') %></a></li>
      <li><%=link_to 'Login', login_path %></li>
    </ul>

    <% if session[:user_id] %>
        <ul class="sidebar-nav nav">
          <li><%= link_to 'Orders',   orders_path   %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users',    users_path    %></li>
        </ul>
        <button type="button" class="btn btn-secondary">
        <%= button_to 'Logout', logout_path, method: :delete   %>
        </button>
    <% end %>
  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>